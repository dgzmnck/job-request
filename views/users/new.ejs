<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/css/form.css" />

<div class="container">
  <h2 class="form-title">CREATE ACCOUNT</h2>
  <form action="/users/new" method="POST">
    <div class="form-control">
      <select name="office" id="office">
        <option value="" disabled selected hidden>Choose office ..</option>
        <% for(let office of offices) { %>
        <option value="<%= office._id %>"><%= office.name %></option>
        <% } %>
      </select>
      <label for="office" class="form-label">Select office</label>
    </div>

    <div class="form-control">
      <input type="text" name="last" required />
      <label>First name</label>
    </div>

    <div class="form-control">
      <input type="text" name="first" required />
      <label>Last name</label>
    </div>

    <div class="form-control">
      <input type="text" name="username" required />
      <label>Username</label>
    </div>

    <div class="form-control">
      <input type="password" name="password" required />
      <label>Password</label>
    </div>

    <div class="form-group mb-3">
      <button class="frmbtn btn-primary form-control">Create Account</button>
    </div>
  </form>
</div>

<script src="/js/form.js"></script>
