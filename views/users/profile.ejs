<%- layout('layouts/boilerplate') %>

<div class="profile-container">
  <div class="side-card">
    <div class="profile">
      <div class="profile-img">
        <img src="" alt="" />
      </div>
      <div class="profile-name">
        <h5><%= currentUser.last %></h5>
        <h5><%= currentUser.first %></h5>
      </div>

      <% if (currentUser.position) { %>
      <h5><%= currentUser.position %></h5>

      <% } else { %>
      <div class="profile-details">
        <a href="#">+ Add position</a>
      </div>
      <% } %>
    </div>

    <div class="misc">
      <div class="profile-details">
        <h4>TY coins</h4>
        <span>192</span>
      </div>

      <div class="profile-details">
        <h4>Total requests</h4>
        <span>total</span>
      </div>
      <div class="profile-details">
        <h4>Pending</h4>
        <span>total</span>
      </div>
      <div class="profile-details">
        <h4>Completed</h4>
        <span>total</span>
      </div>
      <div class="profile-details">
        <h4>Denied</h4>
        <span>total</span>
      </div>
    </div>
  </div>

  <div class="content-card">
    <div class="content-header" id="content-header">
      <!-- <a class="abtn" href="/requests/?id=<%= currentUser._id  %> "
        >My Requests</a
      > -->
      <a class="atoggle" id="my_request" href="/profile/requests/all"
        >My requests</a
      >
      <a
        class="atoggle active"
        id="my_request"
        href="/profile/requests/awaiting-approval"
        >Awaiting approval</a
      >
      <a class="atoggle" id="my_request" href="/profile/requests/pending"
        >Pending</a
      >
      <a class="atoggle" id="my_request" href="/profile/requests/posted"
        >Posted</a
      >
      <a class="atoggle" id="my_request" href="/profile/requests/denied"
        >Denied</a
      >
      <a class="atoggle" id="my_request" href="/profile/requests/in-progress"
        >In progress</a
      >
      <a class="atoggle" id="my_request" href="/profile/requests/completed"
        >Completed</a
      >
    </div>

    <div class="content-main" id="content_main">
      <% if (requests.length ) { %>
      <ul>
        <% for( let req of requests ) { %>
        <li><%= req.nature %></li>
        <% } %>
      </ul>
      <% } %>
    </div>
  </div>
</div>

<script src="/js/profile.js"></script>
