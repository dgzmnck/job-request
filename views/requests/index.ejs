<%- layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/css/table.css" />

<div class="table-wrapper">
  <h1>All requests</h1>

  <table class="fl-table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Requester</th>
        <th>Category</th>
        <th>Nature of Request</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% for (let r of requests) {%>
      <tr>
        <td><%= r.createdAt %></td>
        <td><%= r.requester.first %> <%= r.requester.last %></td>
        <td><%= r.category %></td>
        <td><%= r.nature %></td>
        <td>
          <button class="btn">Approve</button> <button class="btn">Deny</button>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
